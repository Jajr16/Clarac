<div class="Columns">
    <div class="table-responsive item1">
        <table class="data-prod">
            <thead>
                <tr>
                    <th>Articulo</th>
                    <th>Existencia</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <div class="item2 data">
        <i class="fa fa-pencil-square-o editP" aria-hidden="true" style="float: right; color: #001781; visibility: hidden;"></i>
        <div class="named-products">
            <img src="/images/Fondo.jpg" class="products-image">
            <label>Productos:</label>
            <p class="Pname"></p>
        </div>
        <div class="description-products">
            <div class="DP">
                <label>Código de Barras:</label>
                <input autocomplete="off" type="text" id="CodBarras" name="CodBarras" class="CodBarras EditDataP" required maxlength="400"
                    oninput="mayus(this);" onkeypress="return checkA(event)" readonly>
            </div>
            <div class="DP">
                <label>Categoria:</label>
                <input autocomplete="off" type="text" id="Categoria" name="Categoria" class="Categoria EditDataP" required maxlength="400"
                    oninput="mayus(this);" onkeypress="return checkA(event)" readonly>
            </div>
            <div class="DP">
                <label>Marca:</label>
                <input autocomplete="off" type="text" id="Marca" name="Marca" class="Marca EditDataP" required maxlength="400"
                    oninput="mayus(this);" onkeypress="return checkA(event)" readonly>
            </div>
            <div class="DP">
                <label>Unidad:</label>
                <input autocomplete="off" type="text" id="Unidad" name="Unidad" class="Unidad EditDataP" required maxlength="400"
                    oninput="mayus(this);" onkeypress="return checkA(event)" readonly>
            </div>
            <div class="DP">
                <label>Cantidad:</label>
                <input autocomplete="off" type="text" id="Existencia" name="Existencia" class="Existencia EditDataP" required min="1"
                    onkeypress="return checkN(event)" readonly>
            </div>
            <div>
                <label style="margin-bottom: 1rem;">Descripción:</label>
                <textarea class="products-description Descripcion EditDataP" id="Descripcion" name="Descripcion" oninput="mayus(this);"
                    onkeypress="return checkA(event)" required readonly></textarea>
            </div>
            <div class="buttons"></div>
        </div>
    </div>
</div>
<script type="text/javascript" src="/javascripts/Productos.js"></script>