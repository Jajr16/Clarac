<script type="text/javascript" src="/javascripts/Productos.js"></script>
<div class="Fone-item">
    <div class="boxes-containers one-item">
        <div class="title-container">
            Productos de almacén
        </div>
        <div class="content-container">
            <form name="crearRespon" id="crearRespon">
                <div class="FTB">
                    <select id="mySelect" class="Prod" required>
                        <option disabled selected>Buscar producto...</option>
                    </select>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="Columns">
    <div class="table-responsive item1">
        <table class="data-prod">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Existencia</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <div class="boxes-containers item2 data">
        <div class="subtitle-container">
            Detalles del producto
        </div>
        <i class="fa-solid fa-trash trash" aria-hidden="true"
            style="float: right; color: #001781; visibility: hidden;"></i>
        <i class="fa fa-pencil-square-o edit" aria-hidden="true"
            style="float: right; color: #001781; visibility: hidden;"></i>

        <form method="POST" enctype="multipart/form-data">
            <div class="description-product">
                <div class="DP">
                    <label>Producto:</label>
                    <input autocomplete="off" type="text" id="Pname" name="Pname" class="Pname EditData" required
                        maxlength="400" oninput="mayus(this);" onkeypress="return checkA(event)" readonly>
                </div>
                <div class="DP">
                    <label>Código de barras:</label>
                    <input autocomplete="off" type="text" id="CodBarrasP" name="CodBarrasP" class="CodBarrasP EditData"
                        required maxlength="400" oninput="mayus(this);" onkeypress="return checkA(event)" readonly>
                </div>
                <div class="DP">
                    <label>Categoría:</label>
                    <select id="CateP" class="CateP EditData" name="CateP" required disabled></select>
                </div>
                <div class="DP">
                    <label>Marca:</label>
                    <input autocomplete="off" type="text" id="MarcaP" name="MarcaP" class="MarcaP EditData" required
                        maxlength="400" oninput="mayus(this);" onkeypress="return checkA(event)" readonly>
                </div>
                <div class="DP">
                    <label>Unidad de medida:</label>
                    <select id="UnidadP" class="UnidadP EditData" name="UnidadP" required disabled></select>
                </div>
                <div class="DP">
                    <label>Existencia:</label>
                    <input autocomplete="off" type="text" id="ExistenciaP" name="ExistenciaP"
                        class="ExistenciaP EditData" required min="1" onkeypress="return checkN(event)" readonly>
                </div>
                <div>
                    <label style="margin-bottom: 1rem;">Descripción:</label>
                    <textarea class="product-description DescP EditData" id="DescP" name="DescP" oninput="mayus(this);"
                        onkeypress="return checkA(event)" required readonly></textarea>
                </div>
                <div class="buttons"></div>
            </div>
        </form>
    </div>
    <i class="fa-solid fa-circle-plus" style="font-size: 25px;"></i>
</div>
<link rel="stylesheet" type="text/css" href="/stylesheets/products.css">