<div class="Columns">
    <div class="table-responsive item1">
        <table class="data-prod">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Existencia</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <div class="boxes-containers item2 data">
        <i class="fa-solid fa-trash trash" aria-hidden="true"
            style="float: right; color: #001781; visibility: hidden;"></i>
        <i class="fa fa-pencil-square-o edit" aria-hidden="true"
            style="float: right; color: #001781; visibility: hidden;"></i>

        <form method="POST" enctype="multipart/form-data">
            <div class="description-product">
                <div class="DP">
                    <label>Producto:</label>
                    <input autocomplete="off" type="text" id="Pname" name="Pname" class="Pname EditDataP" required
                    maxlength="400" oninput="mayus(this);" onkeypress="return checkA(event)" readonly>
                </div>
                <div class="DP">
                    <label>Código de barras:</label>
                    <input autocomplete="off" type="text" id="CodBarrasP" name="CodBarrasP" class="CodBarrasP EditDataP" required
                        maxlength="400" oninput="mayus(this);" onkeypress="return checkA(event)" readonly>
                </div>
                <div class="DP">
                    <label>Categoría:</label>
                    <input autocomplete="off" type="text" id="CateP" name="CateP" class="CateP EditDataP" required
                        maxlength="400" oninput="mayus(this);" onkeypress="return checkA(event)" readonly>
                </div>
                <div class="DP">
                    <label>Marca:</label>
                    <input autocomplete="off" type="text" id="MarcaP" name="MarcaP" class="MarcaP EditDataP" required
                        maxlength="400" oninput="mayus(this);" onkeypress="return checkA(event)" readonly>
                </div>
                <div class="DP">
                    <label>Unidad de medida:</label>
                    <input autocomplete="off" type="text" id="UnidadP" name="UnidadP" class="UnidadP EditDataP" required
                        maxlength="400" oninput="mayus(this);" onkeypress="return checkA(event)" readonly>
                </div>
                <div class="DP">
                    <label>Existencia:</label>
                    <input autocomplete="off" type="text" id="ExistenciaP" name="ExistenciaP" class="ExistenciaP EditDataP"
                        required min="1" onkeypress="return checkN(event)" readonly>
                </div>
                <div>
                    <label style="margin-bottom: 1rem;">Descripción:</label>
                    <textarea class="product-description DescP EditDataP" id="DescP" name="DescP"
                        oninput="mayus(this);" onkeypress="return checkA(event)" required readonly></textarea>
                </div>
                <div class="buttons"></div>
            </div>
        </form>
    </div>
    <i class="fa-solid fa-circle-plus" style="font-size: 25px;"></i>
</div>
<link rel="stylesheet" type="text/css" href="/stylesheets/products.css">
<script type="text/javascript" src="/javascripts/Productos.js"></script>